---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="Basta Pizzeria à Toulouse : pizzas artisanales, produits italiens AOP/DOP/IGP, pâte 72h fermentation, ambiance conviviale. Commandez en ligne ou sur place !" />
    <!-- Import Google Fonts Quicksand -->
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
  </head>
  <body style="font-family: 'Quicksand', Arial, Helvetica, sans-serif;">
    <slot />
    <footer id="contact" class="bg-black py-12 hover:bg-gray-900 transition-colors duration-500">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="hover:scale-105 transition-transform duration-300">
            <h3 class="text-xl font-semibold mb-4 text-[#fff1b0]">Contact</h3>
            <p class="text-[#fff1b0] hover:text-white transition-colors duration-300 flex items-center">
              <a href="https://www.google.com/maps/search/?api=1&query=33+Rue+de+Varsovie,+31300+Toulouse" target="_blank" rel="noopener" class="flex items-center group underline hover:text-white transition-colors" title="Ouvrir dans Google Maps">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#fff1b0] group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a2 2 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z" /><circle cx="12" cy="10" r="3" /></svg>
                33 Rue de Varsovie, 31300 Toulouse
              </a>
            </p>
            <p class="text-[#fff1b0] hover:text-white transition-colors duration-300 flex items-center">
              <a href="mailto:bastapizze@gmail.com" class="flex items-center group">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#fff1b0] group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m8 0a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                bastapizze@gmail.com
              </a>
            </p>
            <p class="text-[#fff1b0] hover:text-white transition-colors duration-300 flex items-center">
              <a href="tel:+33650171948" class="flex items-center group">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#fff1b0] group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm0 10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H5a2 2 0 01-2-2v-2zm10-10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zm0 10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" /></svg>
                +33 6 50 17 19 48
              </a>
            </p>
          </div>
          <div class="hover:scale-105 transition-transform duration-300">
            <h3 class="text-xl font-semibold mb-4 text-[#fff1b0]">Horaires</h3>
            <p class="text-[#fff1b0] hover:text-white transition-colors duration-300">de 11h30 à 14h15</p>
          </div>
          <div class="hover:scale-105 transition-transform duration-300">
            <h3 class="text-xl font-semibold mb-4 text-[#fff1b0]">Suivez-nous</h3>
            <div class="flex space-x-6 items-center">
              <a href="https://www.instagram.com/bastapizze" target="_blank" rel="noopener" aria-label="Instagram" 
                 class="hover:opacity-80 hover:scale-110 transition-all duration-300">
                <img src="/logo/instagram.svg" alt="Instagram" class="h-8 w-8" />
              </a>
              <a href="https://deliveroo.fr/fr/menu/toulouse/saint-cyprien/basta-pizza-33-rue-de-varsovie" target="_blank" rel="noopener" aria-label="Deliveroo" 
                 class="hover:opacity-80 hover:scale-110 transition-all duration-300">
                <img src="/logo/delivreroo.svg" alt="Deliveroo" class="h-8 w-8" />
              </a>
              <a href="https://www.order.store/fr/store/basta-pizza/d-6BFRriVsmWgtgMuw-ocw?ps=1" target="_blank" rel="noopener" aria-label="Uber Eats" 
                 class="hover:opacity-80 hover:scale-110 transition-all duration-300">
                <img src="/logo/ubereat.svg" alt="Uber Eats" class="h-8 w-8" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  body {
    font-family: 'Quicksand', Arial, Helvetica, sans-serif;
  }
</style> 